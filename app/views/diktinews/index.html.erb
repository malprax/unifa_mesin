<% Diktinews.all.each do |diktinews| %>
 
    <h3><%= raw diktinews.headline %></h3>
    <p><%= raw diktinews.content %></p>
    <aside><%= raw diktinews.reference %></aside>
    <%if user_signed_in? %>
      <% if can? :create, Matakuliah %>
        <%= link_to 'Edit', edit_diktinews_path(diktinews) %>
        <%= link_to 'Hapus', diktinews, method: :delete, data: { confirm: 'Are you sure?' } %>
      <% end %>
    <% end %>
<% end %>


<br />
