<%= simple_form_for(@diktinews) do |f| %>
  <%= f.error_notification %>

  <div class="form-inputs">
    <%= f.input :headline, label: "Judul Berita" %>
    <%= f.input :content, label: "Isi" %>
    <%= f.input :reference, label: "Sumber Referensi" %>
  </div>

  <div class="form-actions">
    <%= f.button :submit %>
  </div>
<% end %>
