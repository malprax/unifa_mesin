<h3><center>Mata Kuliah Kurikulum 2011</center></h3>

<table class="table table-bordered">
   <tr>
      <th>No</th>
      <th>Kode</th>
      <th>Mata Kuliah</th>
      <th>Teori(sks)</th>
      <th>Lab(sks)</th>
      <th>Jumlah(sks)</th>
      <th>Semester</th>
      <th>Mata Kuliah Pilihan</th>
      
  </tr>
   <% Matakuliah.all.each_with_index do |m,i| %>
  <tr>
      <td><%= i + 1%></td>
      <td><%= m.kode%></td>
      <td><%= m.mata_kuliah%></td>
      <td><center><%= m.teori%></center></td>
      <td><center><%= m.lab %></center></td>
      <td><center><%= m.teori + m.lab %></center></td>
      <td><center><%= m.semester %></center></td>
      <td><center><%= m.mata_kuliah_pilihan %></center></td> 
      <%if user_signed_in? %>     
      <td><%= link_to 'Edit', edit_matakuliah_path(m) %></td>
      <td><%= link_to '<i class="icon-trash"></i>'.html_safe, matakuliah_path(m), method: :delete, title: "Hapus", data: { tooltip: true, confirm: 'Are you sure?' } %></td>
      <%end%>
  </tr>
  <% end %>     
</table>
<%if user_signed_in? %>
  <% if can? :create, Matakuliah %>
    <%= link_to '<i class="icon-plus"></i> Tambah Mata Kuliah'.html_safe, new_matakuliah_path %>
  <% end %>
<%end%>
<hr>