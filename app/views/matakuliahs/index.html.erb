<h3><center>Mata Kuliah Kurikulum 2011</center></h3>

<table class="table table-bordered ">
   <tr>
      <th>No</th>
      <th><%= sortable "kode", "Kode" %></th>
      <th>Mata Kuliah</th>
      <th>Teori(sks)</th>
      <th>Lab(sks)</th>
      <th>Jumlah</th>
      <th><%= sortable "semester", "Semester" %></th>
      <th><%= sortable "mata_kuliah_pilihan", "Mata Kuliah Pilihan" %></th>
      <%if user_signed_in? %>
      <%if can? :update, :destroy, @matakuliahs %>     
      <th></th>
      <th></th>
      <% end %>
      <%end%>      
  </tr>
   <% @matakuliahs.each_with_index do |m,i| %>
  <tr>
      <td><%= i + 1%></td>
      <td><%= m.kode%></td>
      <td><%= m.mata_kuliah%></td>
      <td><center><%= m.teori%></center></td>
      <td><center><%= m.lab %></center></td>
      <td><center><%= m.teori + m.lab %></center></td>
      <td><center><%= m.semester %></center></td>
      <td><center><%= m.mata_kuliah_pilihan == false ? "tidak" : "ya" %></center></td> 
      <%if user_signed_in? %>
      <%if can? :update, m %>     
      <td><%= link_to 'Edit', edit_matakuliah_path(m) %></td>
      <%end%>
      <%if can? :destroy, m %>
      <td><%= link_to '<i class="icon-trash"></i>'.html_safe, matakuliah_path(m), method: :delete, title: "Hapus", data: { tooltip: true, confirm: 'Are you sure?' } %></td>
      <%end%>
      <%end%>
  </tr>
  <% end %>     
</table>
<%if user_signed_in? %>
  <% if can? :create, Matakuliah %>
    <%= link_to '<i class="icon-plus"></i> Tambah Mata Kuliah'.html_safe, new_matakuliah_path %>
  <% end %>
<%end%>
<hr>