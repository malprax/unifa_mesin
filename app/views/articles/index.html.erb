<h1>Artikel</h1>

<% @articles.each do |a|%>
  <h4><%= a.name %></h4>
 
  <%#= image_tag a.image_url(:thumb).to_s %> 
  <%= raw a.content %>
  Dibuat oleh <%= a.author_name %> pada <%= a.created_at.strftime('%d %b, %Y')%></br>
  <%if user_signed_in? %>
    <%if can? :update, @page %>
    <%= link_to 'Edit', edit_article_path(a) %> ||<% end %> <%if can? :destroy, @page %><%= link_to 'Hapus', article_path(a), method: :delete, data: {confirm: 'Hapus Artikel Ini?'} %><% end %></br>
  
<% end %>
<hr>
<%end%>


<% if user_signed_in? %>
  <% if can? :create, @article %>
    <%= link_to '<i class="icon-pencil"></i> Buat Artikel'.html_safe, new_article_path %>
  <% end %>
<% end %>
<hr>


